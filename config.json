{
  "log": {
    "enabled": true,
    "file": "dev-server.log"
  },
  "serve": {
    "enabled": true,
    "sslKey": "cert/https.key",
    "sslCrt": "cert/https.crt",
    "httpPort": 8000,
    "httpsPort": 8001
    },
  "build": {
    "enabled": true,
    "global": {
      "tsconfig": "./tsconfig.json",
      "target": "es2018",
      "sourcemap": true,
      "metafile": true
    },
    "production": {
      "minify": true
    },
    "development": {
      "minify": false
    },
    "targets": {
      "browser": [
        {
          "input": "test/src/index.ts",
          "output": "test/dist/index.esm.js",
          "external": []
        }
      ],
      "node": [
        {
          "input": "test/src/index.ts",
          "output": "test/dist/index.node.js",
          "external": []
        }
      ]
    }
  },
  "watch": {
    "enabled": true,
    "locations": [ "package.json", "config.json", "test/src/*" ]
  },
  "lint": {
    "enabled": true,
    "locations": [ "test/src/*.ts" ]
  },
  "typings": {
    "enabled": true
  },
  "typedoc": {
    "enabled": true
  },
  "changelog": {
    "enabled": true,
    "log": "CHANGELOG.md"
  },
  "clean": {
    "enabled": true,
    "locations": ["test/dist/*", "test/types/*", "test/typedoc/*"]
  }
}
